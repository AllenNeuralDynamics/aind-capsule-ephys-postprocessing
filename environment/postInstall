#!/usr/bin/env bash
set -e

# Include fix for template-metrics "spread" computation
# https://github.com/SpikeInterface/spikeinterface/pull/2323
pip uninstall -y spikeinterface
git clone https://github.com/SpikeInterface/spikeinterface.git
cd spikeinterface
git checkout d48e970c24830c0349eeb56d55b1566deb310974
pip install --no-cache-dir .
cd ..